{
	"name": "wptailpack",
	"version": "1.0.0",
	"description": "This is a mashup of wp-scripts with tailwindcss and browsersync. It can be used for static development or as a starting point for a theme/plugin",
	"scripts": {
		"build": "wp-scripts build",
		"check-engines": "wp-scripts check-engines",
		"check-licenses": "wp-scripts check-licenses",
		"format": "wp-scripts format",
		"lint:css": "wp-scripts lint-style",
		"lint:js": "wp-scripts lint-js",
		"lint:js:fix": "wp-scripts lint-js --fix",
		"lint:php": "phpcs --report-file=PHPCS-report.txt --standard=WordPress --extensions=php --ignore=**/vendor/**,**/node_modules/**,**/build/** .",
		"lint:php:fix": "phpcbf --standard=WordPress --extensions=php --ignore=**/vendor/**,**/node_modules/**,**/build/** .",
		"lint:twig": "twigcs **/*.twig",
		"lint:md:docs": "wp-scripts lint-md-docs",
		"lint:pkg-json": "wp-scripts lint-pkg-json",
		"packages-update": "wp-scripts packages-update",
		"plugin-zip": "wp-scripts plugin-zip",
		"test:e2e": "wp-scripts test-e2e",
		"test:unit": "wp-scripts test-unit-js",
		"watch": "wp-scripts start watch --env devType=hosted",
		"serve": "browser-sync start --proxy='http://localhost' --files='public/build/**/*.*, ./**/*.php, ./**/*.twig' --no-open",
    		"start": "npm-run-all --parallel watch serve"
	},
	"author": "John Thompson",
	"license": "ISC",
	"devDependencies": {
		"@tailwindcss/typography": "^0.5.10",
		"@wordpress/scripts": "^26.19.0",
		"browser-sync": "^3.0.2",
		"postcss-import": "^15.0.0",
		"postcss-loader": "^7.0.1",
		"postcss-nested": "^6.0.0",
		"postcss-nested-ancestors": "^3.0.0",
		"postcss-preset-env": "^7.8.2",
		"tailwindcss": "^3.1.8",
		"tw-elements": "^1.0.0-alpha12",
		"webpack-merge": "^5.9.0"
	}
}
